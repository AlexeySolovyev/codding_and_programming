from Person import Person
from House import House

print("Создаём мужчину и женщину...")
man = Person()
woman = Person()
print("Создаём дома для мужчин и женщин...")
house_of_men = House()
house_of_women = House()


print("Запрашиваем описание мужчины...")
man.descriptionOfPerson()
print("Запрашиваем описание женщины...")
woman.descriptionOfPerson()
print("Запрашиваем описание дома для мужчин...")
house_of_men.descriptionOfHouse()
print("Запрашиваем описание дома для женщин...")
house_of_women.descriptionOfHouse()


print("Задаём дому адрес...")
house_of_men.setAdress("Мужчинская, дом 2")


man.setName("Вася")
man.setAge("14")

man.descriptionOfPerson()


woman.setName("Алиса")
woman.setAge("15")

woman.descriptionOfPerson()